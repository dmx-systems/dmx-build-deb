#!/bin/sh
# preinst script for dmx
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

BACKUPDATE=$( date +%F-%H:%M:%S )
DMVERSION='@@VERSION@@'
PREVIOUSVERSION=$( find /var/lib/dmx/dmx-db/ -name "*.dm-version.*" | cut -d'.' -f'3-' | sort -V | tail -n1 )

if [ -f /var/run/dmx/dmx.pid ]; then
    systemctl stop dmx
fi

case "$1" in
    install)
    useradd --system --user-group --home-dir '/var/lib/dmx' --shell '/bin/false' --comment 'DMX - The Context Machine' dmx
    if [ ! -d /var/lib/dmx ]; then
	mkdir /var/lib/dmx
	chown dmx:dmx /var/lib/dmx
    fi
    if [ -d /var/lib/dmx/dmx-db ]; then
	    if [ ! -f /var/lib/dmx/dmx-db/.dm-version.$DMVERSION ]; then
		    mv /var/lib/dmx/dmx-db /var/lib/dmx/dmx-db-$PREVIOUSVERSION-backup-$BACKUPDATE
		    mkdir /var/lib/dmx/dmx-db
		    chown dmx:dmx /var/lib/dmx/dmx-db
		    touch /var/lib/dmx/dmx-db/.dm-version.$DMVERSION
		    echo "Your existing database has been moved to /var/lib/dmx/dmx-db-$PREVIOUSVERSION-backup-$BACKUPDATE."
	    fi
    else
	    mkdir /var/lib/dmx/dmx-db
	    chown dmx:dmx /var/lib/dmx/dmx-db
	    touch /var/lib/dmx/dmx-db/.dm-version.$DMVERSION
    fi
    if [ -d /var/cache/dmx/bundle-cache ]; then
	    rm -rf /var/cache/dmx/bundle-cache
    fi
    if [ -d /var/cache/dmx/dmx-bundle-cache ]; then
	    rm -rf /var/cache/dmx/dmx-bundle-cache
    fi
    ;;

    upgrade)
    # backup existing database
    if [ -d /var/lib/dmx/dmx-db ]; then
        cp -a /var/lib/dmx/dmx-db /var/lib/dmx/dmx-db-$PREVIOUSVERSION-backup-$BACKUPDATE
        touch /var/lib/dmx/dmx-db/.dm-version.$DMVERSION
		echo "Your existing database has been copied to /var/lib/dmx/dmx-db-$PREVIOUSVERSION-backup-$BACKUPDATE."
		if [ -f /var/lib/dmx/dmx-db/.dm-version.$PREVIOUSVERSION ]; then
            rm /var/lib/dmx/dmx-db/.dm-version.$PREVIOUSVERSION
        fi
    fi
    if [ -d /var/cache/dmx/bundle-cache ]; then
	    rm -rf /var/cache/dmx/bundle-cache
    fi
    if [ -d /var/cache/dmx/dmx-bundle-cache ]; then
	    rm -rf /var/cache/dmx/dmx-bundle-cache
    fi
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
