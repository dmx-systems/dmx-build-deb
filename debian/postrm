#!/bin/sh
# postrm script for dmx
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# echo "running postrm $1"

case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        if [ -d /var/cache/dmx ]; then
            rm -rf /var/cache/dmx
        fi
    ## remove dmx.desktop from autostart folder
    ASDIRS="$(find /home/ -maxdepth 3 -type d -wholename "/home/*/.config/autostart")"
    for homedir in ${ASDIRS}; do
        if [ -f ${homedir}/dmx.desktop ]; then
            rm ${homedir}/dmx.desktop
        fi
    done
    ## remove sudoers file
    if [ -f /etc/sudoers.d/42-systemctl_dmx ]; then
        rm /etc/sudoers.d/42-systemctl_dmx
    fi
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

if [ "$1" = purge ]; then
    deb-systemd-invoke stop dmx.service >/dev/null || true
    deb-systemd-invoke disable dmx.service >/dev/null || true
    ### the logfile is a config parameter. We should read this in the future.
    if [ -f /var/log/dmx/dmx.log ]; then
	rm /var/log/dmx/*
    fi
    if [ -d /usr/share/dmx/bundle-available/.~outdated~ ]; then
        rm -r /usr/share/dmx/bundle-available/.~outdated~
    fi
    deluser --system dmx >/dev/null || true

    # Source debconf library.
    . /usr/share/debconf/confmodule
    # Remove my changes to the db.
    db_purge
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
