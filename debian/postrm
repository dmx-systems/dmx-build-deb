#!/bin/sh
# postrm script for dmx
#
# see: dh_installdeb(1)

set -e

echo "running $0 $1" >&2


# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        if [ -d /var/cache/dmx ]; then
            rm -rf /var/cache/dmx || true
        fi
    ## remove dmx.desktop from autostart folder
    ASDIRS="$(find /home/ -maxdepth 3 -type d -wholename "/home/*/.config/autostart")"
    for homedir in ${ASDIRS}; do
        if [ -f ${homedir}/dmx.desktop ]; then
            rm ${homedir}/dmx.desktop || true
        fi
    done
    ## remove sudoers file
    if [ -f /etc/sudoers.d/42-systemctl_dmx ]; then
        rm /etc/sudoers.d/42-systemctl_dmx || true
    fi
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

if [ "$1" = purge ]; then
    echo "if purge ..." >&2
    # deb-systemd-invoke stop dmx.service >/dev/null || true
    # deb-systemd-invoke disable dmx.service >/dev/null || true
    ### the logfile is a config parameter. We should read this in the future.
    echo "1" >&2
    if [ -f /var/log/dmx/dmx.log ]; then
        echo "2" >&2
	rm /var/log/dmx/* || true
        echo "3" >&2
    fi
    echo "4" >&2
    if [ -d /usr/share/dmx/bundle-available/.~outdated~ ]; then
        echo "5" >&2
        rm -r /usr/share/dmx/bundle-available/.~outdated~ || true
        echo "6" >&2
    fi

    echo "7" >&2
    # deluser --system dmx >/dev/null || true
    #delgroup dmx >/dev/null || true

    id -u dmx >/dev/null 2>&1 && deluser --system dmx >/dev/null 2>&1 || true
    id -g dmx >/dev/null 2>&1 && delgroup dmx >/dev/null 2>&1 || true

    echo "8" >&2

    # Source debconf library.
    . /usr/share/debconf/confmodule
    # Remove my changes to the db.
    db_purge || true
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
