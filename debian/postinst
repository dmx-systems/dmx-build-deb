#!/bin/sh
# postinst script for dmx
#
# see: dh_installdeb(1)

set -e
#. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

echo "running postinst $1"

### FIXME
### various dirs can be configured via config.properties
### the script should refelct this.

case "$1" in
    configure)
    # Source debconf library.
    . /usr/share/debconf/confmodule

    # Fetch configuration from debconf
    db_get dmx/initial_admin_password
    INITIAL_ADMIN_PASSWORD=$RET

    # Modify dmx config file
    CONFIG=$(</etc/dmx/config.properties)
    CONFIG=${CONFIG/dmx.security.initial_admin_password = YOUR_SECRET_PASSWORD_HERE/dmx.security.initial_admin_password = ${INITIAL_ADMIN_PASSWORD}}
    cat <<< "${CONFIG]" >/etc/dmx/config.properties

    # Set permissions
    chmod 750 /etc/dmx
    chmod 640 /etc/dmx/*
    chmod 750 /var/log/dmx
    chown -R root:dmx /etc/dmx
    chown -R dmx:dmx /var/lib/dmx
    chown -R dmx:dmx /var/cache/dmx
    chown -R dmx:dmx /var/log/dmx
    
    # copy README to filedir
    cp /usr/share/doc/dmx/examples/dmx.filedir /var/lib/dmx/dmx-filedir/README.txt

    # try to restart DMX if systemd symlink exists
    if [ -L /etc/systemd/system/multi-user.target.wants/dmx.service ]; then
	deb-systemd-invoke try-restart dmx.service >/dev/null || true
    fi
    ;;
    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
